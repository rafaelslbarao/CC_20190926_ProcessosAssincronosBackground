<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btExecucaoThread"
        android:text="Execucao Thread"
        android:ems="12"
        android:padding="16dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/btExecucaoThread"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXECUCAO DA THREAD"
        android:gravity="center"
        android:id="@+id/tvProgressoThread"
        />

    <Button
        android:layout_margin="124dp"
        app:layout_constraintTop_toBottomOf="@id/tvProgressoThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btExecucaoAsyncTask"
        android:text="Execucao AsyncTask"
        android:ems="12"
        android:padding="16dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/btExecucaoAsyncTask"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXECUCAO DA ASYNCTASK"
        android:gravity="center"
        android:id="@+id/tvProgressoAsyncTask"
        />




</androidx.constraintlayout.widget.ConstraintLayout>